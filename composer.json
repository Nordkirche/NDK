{
    "name": "nordkirche/ndk",
    "description": "Das NDK unterstÃ¼tzt bei der Entwicklung von PHP-Clients, um die Datenbank der Nordkirche anzubinden",
    "type": "library",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Leon Dietsch",
            "email": "hallo@leondietsch.de"
        },
        {
            "name": "Holger McCloy",
            "email": "hallo@netzleuchten.com"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit ./tests/",
        "phpmetrics": "./vendor/bin/phpmetrics --git='/usr/bin/env git' --report-html=./docs/phpmetrics ./src",
        "show-metrics": "composer phpmetrics && open ./docs/phpmetrics/index.html",
        "cs:check": "./vendor/bin/phpcs -s --standard=PSR2 --basepath=. ./src/",
        "cs:fix": "./vendor/bin/phpcbf --standard=PSR2 ./src/"
    },
    "autoload": {
        "psr-4": {
            "Nordkirche\\Ndk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nordkirche\\Ndk\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "php-di/php-di": "^7.0",
        "doctrine/cache": "^2.2",
        "guzzlehttp/guzzle": "^7.5",
        "phpdocumentor/reflection-docblock": "^5.3",
        "kevinrob/guzzle-cache-middleware": "^4.0",
        "monolog/monolog": "^2.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "hmaus/drafter-php": "^6.1",
        "phpmetrics/phpmetrics": "^2.8",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    }
}
